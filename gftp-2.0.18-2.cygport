DESCRIPTION="GTK+ FTP client"
HOMEPAGE="http://www.gftp.org/"
SRC_URI="http://www.gftp.org/${P}.tar.bz2"
PATCH_URI="
	mirror://portage/net-ftp/${PN}/files/${P}-ssh2-read.patch
	mirror://portage/net-ftp/${PN}/files/${P}-ssl-wildcardcert.patch
	mirror://portage/net-ftp/${PN}/files/${P}-ipv6.patch
"

CYGCONF_ARGS="--enable-gtkport --enable-textport --enable-ssl --with-locking=none"
MAKEOPTS+=" mkinstalldirs=\$(top_srcdir)/mkinstalldirs"
